<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mujtaba.quizzer">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.QuizMaking"
            android:label="Make a Quiz.." />
        <activity
            android:name=".Activity.QuizTaking"
            android:label="Take a Quiz.." />
        <activity
            android:name=".Activity.MCQ"
            android:label="Make MCQs" />
        <activity
            android:name=".Activity.Numeric"
            android:label="Make Numeric Questions" />
        <activity
            android:name=".Activity.TrueFalse"
            android:label="Make True False Questions" />
        <activity android:name=".Activity.Question" />
        <activity
            android:name=".Activity.ShowQuestions"
            android:label="@string/title_activity_show_questions"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>